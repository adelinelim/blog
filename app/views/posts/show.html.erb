<div id="post_content">

<h1 class="title">
  <%= @post.title %>
</h1>

<p class="body">
  <%= @post.content %>
</p>

<p class="body">
  <b>Tags:</b>
  <%= join_tags(@post) %>
</p>

<br />

<% if user_signed_in? %>
  <%= link_to 'Edit Post', edit_post_path(@post), class: "button" %>
<% end %>

<div id="comments">
  <h2><%= @post.comments.count %> Comments</h2>
  <%= render @post.comments %>

  <h3>Add a comment:</h3>
  <%= render "comments/form" %>
</div>

</div>
